{
  "name": "bookmark-lite",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "라이트하게 북마크 관리 도구",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "pages/popup.html"
  },
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "permissions": ["storage", "contextMenus", "tabs"]
}
